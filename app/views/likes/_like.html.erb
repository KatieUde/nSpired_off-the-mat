
	<div class="card">
		<div class="content">
			<div class="header" id=like-<%= like.id %>>
				<div class="description">
					<span class="quote_content">"<%= like.quote_content %>"</span>
	  			<br>
					<span class=“quote_author”> -<%= like.quote_author %></span>
				</div>
			</div>
		</div>
				<div class="extra content">
					<div class="ui button">
						<i class="trash icon"></i>
						<% if current_user?(like.user) %>
		      		<%= link_to "Remove Quote", like, method: :delete, data: { confirm: "Are you sure you would like to remove this quote?" } %>
						<% end %>
					</div>
				</div>
			</div>
