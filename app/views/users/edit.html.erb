<div class="ui text stackable raised container segment">

  <% provide(:title, 'Edit user') %>
  <h1>Update your profile</h1>

  <div class="ui form" id="edit-profile-form" method="POST">
      <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>
    <div class="ten column field">
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>
    <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email %>
    </div>
    <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password %>
    </div>
    <div class="field">
        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation %>
    </div>
    <div id="edit-profile-button">
        <%= f.submit "Save changes", class: "ui button" %>
      <% end %>
    </div>
    <br>
      <div class="gravatar_edit">
        <%= gravatar_for @user %>
        <a href="http://gravatar.com/emails" target="blank">change</a>
      </div>
    </div>
  </div>
