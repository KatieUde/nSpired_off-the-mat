<div class="ui text stackable raised container segment">
  <% provide(:title, 'Sign up') %>
  <h1>Sign up</h1>

    <div class="ui form" id="registration-form" method="POST">
        <%= form_for(@user) do |f| %>
          <%= render 'shared/error_messages' %>
        <div class="ten column field">
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>
        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email %>
        </div>
        <div class="field">
          <%= f.label :password %>
          <%= f.password_field :password %>
        </div>
        <div class="field">
          <%= f.label :password_confirmation, "Password Confirmation" %>
          <%= f.password_field :password_confirmation %>
        </div>
        <div id="create-profile-button">
          <%= f.submit "Create my account", class: "ui button" %>
        <% end %>
      </div>
    </div>
  </div>
