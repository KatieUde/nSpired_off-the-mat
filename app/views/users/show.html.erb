<% provide(:title, @user.name) %>
<div class="row">
  <aside class="">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
    <div>
      <% if @user.likes.any? %>
      <h3>Favorite Quotes (<%= @user.likes.count %>)</h3>
        <ol class="likes">
          <%= render @likes %>
        </ol>
      <%= will_paginate @likes %>
    <% end %>
  </div>
</div>
